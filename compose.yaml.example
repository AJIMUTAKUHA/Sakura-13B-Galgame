version: "1.0"

x-gpu-template: &gpu_template
  image: kurikomoe/sakura-13b-galgame:0.8
  volumes: &mount_model
    - ./models/Sakura-13B-LNovel-v0_8-4bit:/models/Sakura-13B-LNovel-v0_8-4bit
  deploy: &deploy_with_gpu
    resources:
      reservations:
        devices:
          - driver: nvidia
            count: 1
            capabilities: [gpu, ]

services:
  server:
    <<: *gpu_template
    network_mode: 'host'
    environment:
      COMMAND: run_server
      USERNAME: SakuraLLM
      PASSWORD: It's MyGO!!!!!
      SAKURA_MODEL_NAME: Sakura-13B-LNovel-v0_8-4bit
      SAKURA_MODEL_VERSION: 0.8
      ADDRESS: 0.0.0.0
      PORT: 5000

  translate-novel:
    <<: *gpu_template
    environment:
      COMMAND: translate_novel

  translate-epub:
    <<: *gpu_template
    environment:
      COMMAND: translate-epub
